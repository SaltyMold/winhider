Filename: "{tmp}\vc_redist.x86.exe"; \
    Parameters: "/passive /norestart"; \
    StatusMsg: "Installing VC++ x86 Redistributable..."; \
    Flags: waituntilterminated; \
    Check: ShouldRunVCX86
    
